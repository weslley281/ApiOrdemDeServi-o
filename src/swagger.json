{
  "openapi": "3.0.0",
  "info": {
    "title": "Ferraz Order of Service",
    "description": "This is an application for create Order of Service",
    "version": "1.0.0",
    "contact": {
      "email": "weslleyhenrique800@gmail.com"
    }
  },
  "tags": [
    {
      "name": "Users",
      "description": "User management"
    }
  ],
  "paths": {
    "/users": {
      "post": {
        "tags": ["Users"],
        "summary": "Create a new user",
        "description": "To create a new user, add the name, phone, email, birthday, admin and password fields in the request body.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "required": [
                  "name",
                  "phone",
                  "email",
                  "birthday",
                  "admin",
                  "password"
                ],
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "phone": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "birthday": {
                    "type": "string"
                  },
                  "admin": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "Fulano de Tal",
                  "phone": "(65)99123-4567",
                  "email": "fulano@gmail.com",
                  "birthday": "1995-11-28",
                  "admin": false,
                  "password": "123"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
    "/users/{user_id}": {
      "get": {
        "tags": ["Users"],
        "summary": "Get user profile by ID",
        "description": "To list a user you need the route param 'user_id'",
        "parameters": [
          {
            "in": "path",
            "name": "user_id",
            "required": true,
            "type": "number",
            "format": "number"
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          },
          "404": {
            "description": "User not exists"
          }
        }
      }
    },
    "/users/update": {
      "put": {
        "tags": ["Users"],
        "summary": "Update a user",
        "description": "To create a new user, add the user_id, name, phone, email, birthday, admin and password fields in the request body.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "required": [
                  "user_id",
                  "name",
                  "phone",
                  "email",
                  "birthday",
                  "admin",
                  "password"
                ],
                "type": "object",
                "properties": {
                  "user_id": {
                    "type": "number"
                  },
                  "name": {
                    "type": "string"
                  },
                  "phone": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "birthday": {
                    "type": "string"
                  },
                  "admin": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "example": {
                  "user_id": 1,
                  "name": "Fulano de Tal",
                  "phone": "(65)99123-4567",
                  "email": "fulano@gmail.com",
                  "birthday": "1995-11-28",
                  "admin": false,
                  "password": "123"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Updated"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
    "/clients": {
      "post": {
        "tags": ["Clients"],
        "summary": "Create a new client",
        "description": "To create a new client, add the name, phone, email, birthday, country, state, city, district, address, cep, and document fields in the request body.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "required": [
                  "name",
                  "phone",
                  "email",
                  "birthday",
                  "country",
                  "state",
                  "city",
                  "district",
                  "address",
                  "cep",
                  "document"
                ],
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "phone": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "birthday": {
                    "type": "string"
                  },
                  "country": {
                    "type": "string"
                  },
                  "state": {
                    "type": "string"
                  },
                  "city": {
                    "type": "string"
                  },
                  "district": {
                    "type": "string"
                  },
                  "address": {
                    "type": "string"
                  },
                  "cep": {
                    "type": "integer"
                  },
                  "document": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "Comercio que comercializa alguma coisa LTDA - ME",
                  "phone": "(65)3312-3456",
                  "email": "comercio@gmail.com",
                  "birthday": "2022-11-20",
                  "country": "Brasil",
                  "state": "Mato Grosso",
                  "city": "Cuiab√°",
                  "district": "Centro",
                  "address": "Rua Alguma coisa, 0",
                  "cep": 12345678,
                  "document": "12.345.678/0001-00"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
    "/orders": {
      "post": {
        "tags": ["Orders of Service"],
        "summary": "Create a new order",
        "description": "To create a new order, add the user_id, client_id, description, customerReport, diagnosis, warrantyAndNotes, serviceValue, sparePartsValue and finisheAt fields in the request body.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "required": [
                  "user_id",
                  "client_id",
                  "description",
                  "customerReport",
                  "diagnosis",
                  "warrantyAndNotes",
                  "serviceValue",
                  "sparePartsValue",
                  "finisheAt"
                ],
                "type": "object",
                "properties": {
                  "user_id": {
                    "type": "integer"
                  },
                  "client_id": {
                    "type": "integer"
                  },
                  "description": {
                    "type": "string"
                  },
                  "customerReport": {
                    "type": "string"
                  },
                  "diagnosis": {
                    "type": "string"
                  },
                  "warrantyAndNotes": {
                    "type": "string"
                  },
                  "serviceValue": {
                    "type": "number"
                  },
                  "sparePartsValue": {
                    "type": "number"
                  },
                  "finisheAt": {
                    "type": "string"
                  }
                },
                "example": {
                  "user_id": 1,
                  "client_id": 1,
                  "description": "aaa aaa aaaa aaa",
                  "customerReport": "aaa aaa aaaa aaa",
                  "diagnosis": "aaa aaa aaaa aaa",
                  "warrantyAndNotes": "aaa aaa aaaa aaa",
                  "serviceValue": 399.99,
                  "sparePartsValue": 299.99,
                  "finisheAt": "2023-10-23"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
    "/orders/{user_id}": {
      "get": {
        "tags": ["Orders of Service"],
        "summary": "Get all orders of service if user exists",
        "description": "To list a orders you need the route param 'user_id'",
        "parameters": [
          {
            "in": "path",
            "name": "user_id",
            "required": true,
            "type": "number",
            "format": "number"
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          },
          "404": {
            "description": "User not exists"
          }
        }
      }
    }
  }
}
