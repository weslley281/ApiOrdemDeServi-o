{
  "openapi": "3.0.0",
  "info": {
    "title": "Ferraz Order of Service",
    "description": "This is an application for create Order of Service",
    "version": "1.0.0",
    "contact": {
      "email": "weslleyhenrique800@gmail.com"
    }
  },
  "tags": [
    {
      "name": "Users",
      "description": "User management"
    }
  ],
  "paths": {
    "/users": {
      "post": {
        "tags": ["Users"],
        "summary": "Create a new user",
        "description": "To create a new user, add the name, phone, email, admin, password, and created_at fields in the request body.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "required": [
                  "name",
                  "phone",
                  "email",
                  "birthday",
                  "admin",
                  "password"
                ],
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "phone": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "birthday": {
                    "type": "string"
                  },
                  "admin": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "Fulano de Tal",
                  "phone": "(65)99123-4567",
                  "email": "fulano@gmail.com",
                  "birthday": "1995-11-28",
                  "admin": false,
                  "password": "123"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
    "/users/{user_id}": {
      "get": {
        "tags": ["Users"],
        "summary": "Get user profile by ID",
        "description": "To list a user you need the route param 'user_id'",
        "parameters": [
          {
            "in": "path",
            "name": "user_id",
            "required": true,
            "type": "number",
            "format": "number"
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          },
          "404": {
            "description": "User not exists"
          }
        }
      }
    }
  }
}
